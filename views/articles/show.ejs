<h1><%= article.title %> <small>by <%= `${article.author.firstName} ${article.author.lastName}` %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<h2>Comments</h2>

<% if (comments) { %>
  <% comments.forEach(comment => { %>
  <p style="font-size: 15px; margin-bottom: 0;"><strong><%= comment.dataValues.name %> said:</strong></p>
  <p><%= comment.dataValues.content %></p>
  <% }); %>
  <% } %>
  
  <form action="/comments" method="POST" style="margin-top: 40px">
    <div class="form-group">
      <label for="content">Add Comment Here:</label>
      <input type="text" class="form-control" id="content" name="content" required>
    </div>
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <input type="text" name="articleId" value="<%= article.id %>" style="display: none">
    <input type="submit" class="btn btn-primary">
  </form>
  
  <hr />
  
  <a href="/">&larr; Back Home</a>